{%extends "::base.html.twig" %}
{% block body %}
    <h1>Listes de voeux</h1>
    <table class="table table-condensed">
    <thead><tr><th>Actions</th><th>Listes existantes</th></tr></thead>
    <tbody>
	{% for liste in listes %}
		<tr>
            <td>
                <a href="{{ path('liste_agent', {'list_id':liste.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                <a href="{{ path('liste_supp', {'list_id':liste.id}) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
            </td>
            <td>{{ liste.nom }}</td>
        </tr>
	{% endfor %}
    <tr>
        <td>
            <a href="{{ path('liste_add') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
        </td>
        <td>< Nouvelle liste ></td>
    </tr>
    </tbody>
    </table>
{% endblock %}
