{% block javascripts %}
  <script>
    $( function() {
      $('tbody').sortable();

      $("#valider").click(function(){
        var result = "";
        $('.sorted_table tbody tr').each(function(){
          var res = $(this).find(".res").text();
          var pos = $(this).find(".pos").text();
          result += '['+res+'|'+pos+']';
        });
        alert(result);
      });
    });
  </script>
{% endblock %}
