{% trans_default_domain 'FOSUserBundle' %}
<div class="formulaire">
{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
    <div class="form-group">
		{{ form_label(form.current_password, "Mot de passe actuel", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
		{{ form_errors(form.current_password) }}
		<div class="col-sm-5">
			{{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div> 
    <div class="form-group">
		{{ form_label(form.plainPassword.first, "Nouveau mot de passe", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
		{{ form_errors(form.plainPassword.first) }}
		<div class="col-sm-5">
			{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>
	<div class="form-group">
		{{ form_label(form.plainPassword.second, "Confirmation", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
		{{ form_errors(form.plainPassword.second) }}
		<div class="col-sm-5">
			{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}</br>
		</div>
	</div>
	
    <div>
        <input class="btn btn-primary" type="submit" value="Changer de mot de passe" />
    </div>
{{ form_end(form) }}
</div>
